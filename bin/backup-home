#!/usr/bin/env bash

source $HOME/.dotfiles/shell/logging.sh

ANYFAIL=false
function anyfail() {
    log_task_fail
    ANYFAIL=true
}

log_task "Creating Backup"

mkdir -p $HOME/Backup/_temp

log_task "Copying files" \
    && copy-home "$HOME/Backup/_temp" | debounce | log_progress  \
    && log_task_success \
    || anyfail

log_task "Creating DMG" \
    && dmg "$HOME/Backup/_temp/$(whoami)" "$HOME/Backup/$(hostname)_$(whoami)_$(date "+%Y-%U").dmg" | debounce | log_progress \
    && log_task_success \
    || anyfail

log_task "Cleaning up" \
    && rm -rf $HOME/Backup/_temp \
    && log_info "Temporary files removed" \
    && log_task_success \
    || anyfail

if [ "$ANYFAIL" = true ]; then
    log_task_fail "Backup failed"
else
    log_task_success "$HOME/Backup/$(hostname)_$(whoami)_$(date "+%Y-%U").dmg"
fi