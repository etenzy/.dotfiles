# Create a new directory and enter it
function mkd() {
   mkdir -p "$@" && cd "$@"
}

# All the dig info
function digga() {
    dig +nocmd "$1" any +multiline +noall +answer
}

function removehost() {
   ssh-keygen -R "$1"
}

# Run artisan
function artisan() {
    php artisan "$@"
}

