# Create a new directory and enter it
function mkd() {
   mkdir -p "$@" && cd "$@"
}

# All the dig info
function digga() {
    dig +nocmd "$1" any +multiline +noall +answer
}

function removehost() {
   ssh-keygen -R "$1"
}

# Run artisan
function artisan() {
    php artisan "$@"
}

fuction fixQL() {
    xattr -r -d com.apple.quarantine ~/Library/QuickLook/QL*
}

function helm_completion() {
    helm completion zsh > $ZSH/completions/_helm
}

function flux_completion() {
    flux completion zsh > $ZSH/completions/_flux
}

function gh_completion() {
    gh completion -s zsh > $ZSH/completions/_gh
}

function hcloud_completion() {
    hcloud completion zsh > $ZSH/completions/_hcloud
}

function kubeone_completion() {
    kubeone completion zsh > $ZSH/completions/_kubeone
}

function update_completions() {
    mkdir -p $ZSH/completions
    helm_completion
    flux_completion
    gh_completion
    hcloud_completion
    kubeone_completion
}

function watch-kube() {
    watch -c kubecolor --force-colors "$@"
}

